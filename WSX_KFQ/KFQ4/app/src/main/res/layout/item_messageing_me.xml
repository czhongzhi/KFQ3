<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/talk_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/talk_time"
        android:layout_width="wrap_content"
        android:textColor="@color/divider_font_mid"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="16:25:35"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">


        <ImageView
            android:id="@+id/talk_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/defaut_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/talk_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/talk_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/messageing_me"
                android:gravity="left"
                android:paddingBottom="12dp"
                android:paddingLeft="18dp"
                android:paddingRight="30dp"
                android:paddingTop="12dp"
                android:text="明天可以去看看嘛？明天可以去看看嘛？明天可以去看看嘛？明天可以去看看嘛？明天可以去看看嘛？明天可以去看看嘛？明天可以去看看嘛？"
                android:textColor="@color/divider_font_mid"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>