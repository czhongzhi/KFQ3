<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical"
    tools:context="com.inetgoes.fangdd.activity.MateBrokerActivity">

    <TextView
        android:layout_width="match_parent"
        android:background="@color/divider_font_tint"
        android:layout_height="0.5dp" />

    <RadioGroup
        android:id="@+id/layout_tap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/starlevel"
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:background="@drawable/home_select"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="星级"
            android:textColor="@color/divider_font"
            android:textSize="@dimen/app_register" />

        <RadioButton
            android:id="@+id/ordernum"
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/home_select"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="交易量"
            android:textColor="@color/divider_font"
            android:textSize="@dimen/app_register" />

        <RadioButton
            android:id="@+id/fangnum"
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:background="@drawable/home_select"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="房源数量"
            android:textColor="@color/divider_font"
            android:textSize="@dimen/app_register" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/divider_font_tint"
        android:layout_height="0.5dp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

</LinearLayout>
