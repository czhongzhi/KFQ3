<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/broker_img"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_boy" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/trans_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/broker_ok_arrow"
                android:text="已预约 "
                android:textColor="@color/divider_font_red"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/trans_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/trans_status"
                android:layout_marginTop="5dp"
                android:text="2015-11-03"
                android:textColor="@color/divider_font_mid"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/broker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trans_status"
                android:text="吉小姐"
                android:textColor="@color/divider_font"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/broker_name"
                android:layout_marginTop="6dp"
                android:text="职业经纪人 (10年)"
                android:textColor="@color/divider_font_mid" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/introduce"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/broker_star"
                    style="@style/kfqRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4.5" />

                <TextView
                    android:id="@+id/broker_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/button_divider_bg_select"
                    android:text="4.8"
                    android:textColor="@color/divider_font_mid"
                    android:textSize="12sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/yuyueta"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/edittext_divider_bg_select"
                android:gravity="center"
                android:padding="6dp"
                android:text="取消预约"
                android:textColor="@color/divider_font_mid" />

            <TextView
                android:id="@+id/tadehouse"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/yuyueta"
                android:background="@drawable/edittext_divider_bg_select"
                android:gravity="center"
                android:padding="6dp"
                android:text="发送消息"
                android:textColor="@color/divider_font_mid" />


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
