<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        >

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_evaluation_tvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-11-9"
                android:textSize="12dp"
                android:textColor="@color/divider_font" />

            <TextView
                android:id="@+id/item_evaluation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="感觉很专业，房子的好坏都很真实"
                android:textColor="@color/divider_font"
                android:textSize="12dp" />

        </LinearLayout>


        <RatingBar
            android:id="@+id/evaluation_star"
            style="@style/kfqRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4.5" />
    </RelativeLayout>

</RelativeLayout>
