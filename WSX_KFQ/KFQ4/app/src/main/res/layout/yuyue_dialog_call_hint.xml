<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popupwin_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">


    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/divider_font_mid"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:text="姓名 吉小及"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialog_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/divider_font_mid"
        android:layout_marginBottom="15dp"
        android:text="电话 18278252521"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/divider_font_mid"
        android:layout_marginBottom="15dp"
        android:text="@string/call_hint"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_ok"
            android:textColor="@color/divider_font_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_divider_bg_select"
            android:padding="8dp"
            android:text="好的" />

    </LinearLayout>


</LinearLayout>
