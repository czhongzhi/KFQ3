<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.inetgoes.fangdd.activity.BrokerMainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/broker_h_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/broker_horimage" />

                <TextView
                    android:id="@+id/broker_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="34dp"
                    android:background="@drawable/mate_broker_ro"
                    android:drawableLeft="@drawable/agent_plus"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="15dp"
                    android:paddingTop="2dp"
                    android:text=" 关注"
                    android:textColor="@color/divider_font_mid"
                    android:textSize="18sp" />

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/broker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- -"
                    android:textColor="@color/divider_font"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/broker_star"
                    style="@style/kfqRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/broker_name"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="0.0" />

                <TextView
                    android:id="@+id/broker_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/broker_star"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/broker_star"
                    android:layout_toRightOf="@+id/broker_star"
                    android:background="@drawable/button_divider_bg_select"
                    android:gravity="center"
                    android:text="0.0"
                    android:textColor="@color/divider_font_mid"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/broker_name"
                    android:layout_marginTop="4dp"
                    android:text="职业经纪人 (--)"
                    android:textColor="@color/divider_font_mid"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/broker_ability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/introduce"
                    android:layout_marginTop="4dp"
                    android:text="擅长区域：----"
                    android:textColor="@color/divider_font_mid"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/main_round_2"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/broker_evaluation1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:text="--"
                        android:textColor="@color/divider_font" />

                    <TextView
                        android:id="@+id/broker_evaluation2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="楼盘评测"
                        android:textColor="@color/divider_font_mid" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/divider_font_tint" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预约次数"
                        android:textColor="@color/divider_font_mid"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/broker_yuyue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="--"
                        android:textColor="@color/divider_font"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_font_tint" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单成交"
                        android:textColor="@color/divider_font_mid"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/broker_chengjiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="--"
                        android:textColor="@color/divider_font"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_font_tint" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="经纪人排名"
                        android:textColor="@color/divider_font_mid"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/broker_paiming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="--"
                        android:textColor="@color/divider_font"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/content_bg">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider_font_tint" />

                <TextView
                    android:id="@+id/broker_fangyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="与您匹配的房源()"
                    android:textColor="@color/divider_font_mid"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/broker_allfangyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/brokers_round"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="3dp"
                    android:text="查看TA的全部房源()"
                    android:textColor="@color/divider_font_mid"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_font_tint" />

            </RelativeLayout>

            <!--房源listView-->

            <com.inetgoes.fangdd.view.MyListView
                android:id="@+id/lv_fangyuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@color/transparent" />


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@color/content_bg">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider_font_tint" />

                <TextView
                    android:id="@+id/broker_comm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="收到的评价(206)"
                    android:textColor="@color/divider_font_mid"
                    android:textSize="14sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_font_tint" />
            </RelativeLayout>


            <!--评价listView-->
            <com.inetgoes.fangdd.view.MyListView
                android:id="@+id/lv_pingjia"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:listSelector="@color/transparent" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55dp" />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:id="@+id/layout_connected_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp">

            <Button
                android:id="@+id/yuyueta"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/button_divider_bg_select"
                android:text="预约TA"
                android:textColor="@color/divider_font_mid"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_connected_n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:visibility="gone">

            <Button
                android:id="@+id/yiyuyue"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:background="@drawable/button_divider_bg"
                android:text="已预约"
                android:textColor="@color/divider_font_mid"
                android:textSize="18sp" />

            <Button
                android:id="@+id/cancelyuyue"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/button_divider_bg_select"
                android:text="取消预约"
                android:textColor="@color/divider_font_mid"
                android:textSize="18sp" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>







