<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_guide_four"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:text="@string/guide_text_four"
        android:textColor="@color/divider_font_mid"
        android:textSize="26sp" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:id="@+id/guide_button_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:paddingTop="6dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/broker_regedit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_divider_bg_select"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="房产专家加盟"
            android:textColor="@color/divider_font_mid"
            android:textSize="@dimen/app_18sp" />

        <Button
            android:id="@+id/broker_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_divider_bg_select"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="登陆"
            android:textColor="@color/divider_font_mid"
            android:textSize="@dimen/app_18sp" />


    </LinearLayout>

</LinearLayout>
