<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_left"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_leftmenu_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_userinfo"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:clickable="true"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/user_icon_fr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:alpha="0.3"
                android:src="@drawable/user_icon_circle" />

            <com.inetgoes.kfqbrokers.view.MyCircleImageView
                android:id="@+id/user_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/home_picture" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/user_icon_fr"
            android:paddingLeft="14dp">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="middle"
                android:maxWidth="90dp"
                android:singleLine="true"
                android:text="吉吉"
                android:textColor="@color/leftmenu_font"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/user_star"
                style="@style/kfqRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/user_name"
                android:layout_marginTop="3dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4.5" />

            <TextView
                android:id="@+id/user_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/user_star"
                android:layout_gravity="center_vertical"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@id/user_star"
                android:layout_toRightOf="@id/user_star"
                android:background="@drawable/button_divider_bg_select"
                android:text="4.8"
                android:textColor="@color/divider_font_mid"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_star"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yuyue_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约 888"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/dingdan_num"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单 888"
                    android:textColor="@color/white" />

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/divider_font_tint" />

    <include
        android:id="@+id/item_xiaoxi"
        layout="@layout/userinfo_menu_comb" />


    <include
        android:id="@+id/item_yuyue"
        layout="@layout/userinfo_menu_comb" />

    <include
        android:id="@+id/item_jingjiren"
        layout="@layout/userinfo_menu_comb" />


    <include
        android:id="@+id/item_kanfangdingdan"
        layout="@layout/userinfo_menu_comb" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/divider_font_tint" />

    <include
        android:id="@+id/item_uphouse"
        layout="@layout/userinfo_menu_comb" />

    <include
        android:id="@+id/item_eval"
        layout="@layout/userinfo_menu_comb" />

    <include
        android:id="@+id/item_jingjirenzhaomu"
        layout="@layout/userinfo_menu_comb" />


    <include
        android:id="@+id/item_yezhu"
        layout="@layout/userinfo_menu_comb" />

    <include
        android:id="@+id/item_tongzhi"
        layout="@layout/userinfo_menu_comb" />

    <include
        android:id="@+id/item_shezhi"
        layout="@layout/userinfo_menu_comb" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/divider_font_tint" />


    <include
        android:id="@+id/item_adout"
        layout="@layout/userinfo_menu_comb" />

</LinearLayout>