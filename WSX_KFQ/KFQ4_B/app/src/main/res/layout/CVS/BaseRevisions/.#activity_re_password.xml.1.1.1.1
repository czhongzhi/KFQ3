<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="none"
    tools:context="com.inetgoes.kfqbrokers.activity.RePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="请验证您的手机号码并重设密码"
            android:textColor="@color/divider_font" />

        <EditText
            android:id="@+id/ed_phone"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_select_bg"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textColorHint="@color/divider_font_tint" />


        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_autocode"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_select_bg"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColorHint="@color/divider_font_tint" />

            <Button
                android:id="@+id/but_getcode"
                android:layout_width="78dp"
                android:layout_height="41dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button_select_bg"
                android:text="验证"
                android:textColor="@color/divider_font" />

        </LinearLayout>

        <EditText
            android:id="@+id/ed_id"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_select_bg"
            android:hint="身份证号"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColorHint="@color/divider_font_tint" />

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_select_bg"
            android:hint="设置新密码"
            android:paddingLeft="10dp"
            android:textColorHint="@color/divider_font_tint" />


        <EditText
            android:id="@+id/ed_repassword"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_select_bg"
            android:hint="确认密码"
            android:paddingLeft="10dp"
            android:textColorHint="@color/divider_font_tint" />


        <Button
            android:id="@+id/but_register"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_select_bg"
            android:text="确认重设"
            android:textColor="@color/divider_font" />

        <LinearLayout
            android:id="@+id/ll_protocol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击-开始,即表示您同意"
                android:textColor="@color/divider_font_mid"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/app_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="看房去服务协议"
                android:textColor="#fac72f"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>
