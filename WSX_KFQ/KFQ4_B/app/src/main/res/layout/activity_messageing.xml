<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/content_bg"
              android:orientation="vertical"
              tools:context="com.inetgoes.fangdd.activity.MessageingActivity">

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/listView"
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:divider="@color/transparent"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:scrollbars="none"
        android:smoothScrollbar="true"
        android:transcriptMode="alwaysScroll"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrDrawable="@drawable/default_ptr_flip"
        ptr:ptrHeaderBackground="@color/progress_backgroud"
        ptr:ptrHeaderTextColor="@color/floor_item_text_black"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_content"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_select_bg"
            android:hint="请输入内容"
            android:paddingLeft="10dp"
            android:textColorHint="@color/divider_font_tint"/>

        <Button
            android:id="@+id/but_send"
            android:layout_width="78dp"
            android:layout_height="41dp"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignTop="@+id/ed_password"
            android:layout_marginLeft="8dp"
            android:background="@drawable/button_select_bg"
            android:text="推送房源"
            android:textColor="@color/divider_font"/>

    </LinearLayout>


</LinearLayout>
