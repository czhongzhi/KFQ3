<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:background="@color/white"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:paddingTop="7dp">

        <ImageView
            android:id="@+id/item_iv_fangyuan"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/broker_lou" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/item_iv_fangyuan"
            android:orientation="vertical"
            android:paddingLeft="7dp">


            <TextView
                android:id="@+id/item_tv_fangyuan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前海时代.CEO公馆"
                android:textColor="@color/divider_font"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/item_tv_fangyuan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="看房次数：2300"
                android:textColor="@color/divider_font_mid"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_tv_fangyuan3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="成交量：58"
                android:textColor="@color/divider_font_mid"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:orientation="vertical">


            <TextView

                android:id="@+id/item_tv_fangyuan4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88000元/平"
                android:textColor="@color/divider_font_red"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_tv_fangyuan5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="6dp"
                android:background="@drawable/brokers_gps"
                android:paddingBottom="3dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="3dp"
                android:text="宝安"
                android:textColor="@color/divider_font_mid"
                android:textSize="14sp" />


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
