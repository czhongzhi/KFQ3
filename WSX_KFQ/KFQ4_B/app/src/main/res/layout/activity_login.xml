<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.inetgoes.kfqbrokers.activity.LoginActivity">

    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:background="@drawable/edittext_select_bg"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textColorHint="@color/divider_font_tint" />


    <EditText
        android:id="@+id/ed_password"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@id/ed_phone"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_select_bg"
        android:hint="密码"
        android:password="true"
        android:paddingLeft="10dp"
        android:textColorHint="@color/divider_font_tint" />


    <Button
        android:id="@+id/but_login"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@+id/ed_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_select_bg"
        android:text="登录"
        android:textColor="@color/divider_font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/but_login"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"
            android:textColor="@color/divider_font_mid" />

        <TextView
            android:id="@+id/app_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="《服务标准及违约责任书》"
            android:textColor="@color/mate_color" />

    </LinearLayout>

    <TextView
        android:id="@+id/broker_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="房产专家加盟"
        android:textColor="@color/divider_font"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/nopassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="忘记密码"
        android:textColor="@color/divider_font"
        android:textSize="14sp" />
</RelativeLayout>
