<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/popupwin_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/dialog_icon"
        android:layout_width="115dp"
        android:layout_marginTop="25dp"
        android:layout_height="115dp"
        android:src="@drawable/ok" />

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/divider_font_mid"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:text="预约经纪人成功"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:gravity="center"
        android:text="经纪人会在3分钟之内与您取得联系请您耐心等待"
        android:textColor="@color/divider_font_mid"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/divider_font_mid"
            android:background="@drawable/button_divider_bg_select"
            android:padding="8dp"
            android:text="查看预约" />

        <Button
            android:id="@+id/dialog_ok"
            android:textColor="@color/divider_font_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="@drawable/button_divider_bg_select"
            android:padding="8dp"
            android:text="好的" />

    </LinearLayout>


</LinearLayout>
